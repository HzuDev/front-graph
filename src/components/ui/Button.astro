---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
    title?: string;
    size?: "sm" | "md" | "lg";
    variant?: "primary" | "secondary" | "outline" | "ghost";
    fullWidth?: boolean;
    href?: string;
    type?: "button" | "submit" | "reset";
    className?: string; // Permitir clases personalizadas
}

const {
    title,
    size = "md",
    variant = "primary",
    fullWidth = false,
    href,
    type = "button",
    className = "",
    ...rest
} = Astro.props;

/* 
  Estilos base y variantes 
  Usamos tailwind-merge si estuviera disponible, pero lo haremos con template literals simples y lógica condicional.
*/

const baseStyles =
    "inline-flex items-center justify-center gap-2 rounded-xl transition-all font-bold focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed active:scale-95";

const sizeStyles = {
    sm: "px-4 py-2 text-sm",
    md: "px-6 py-3 text-base",
    lg: "px-8 py-4 text-lg",
};

const variantStyles = {
    primary:
        "bg-primary-green text-hunter hover:bg-soft-green shadow-lg shadow-primary-green/10",
    secondary:
        "bg-hunter text-primary-green hover:bg-gray-50 border border-primary-green/10",
    outline:
        "bg-transparent border border-primary-green/30 text-primary-green hover:bg-primary-green/5",
    ghost: "bg-transparent text-primary-green hover:bg-primary-green/5",
};

const widthStyle = fullWidth ? "w-full" : "";

const computedClass = [
    baseStyles,
    sizeStyles[size],
    variantStyles[variant],
    widthStyle,
    className,
].join(" ");

const Element = href ? "a" : "button";
---

<Element
    href={href}
    type={!href ? type : undefined}
    class={computedClass}
    {...rest}
>
    <!-- Slot para icono (opcional) -->
    <slot name="icon" />

    <!-- Contenido: Título pasado como prop o children -->
    {title ? <span>{title}</span> : <slot />}

    <slot name="right-icon" />
</Element>
